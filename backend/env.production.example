# ========================================
# BOTZILLA API V2 - PRODUCCIÓN
# ========================================

# Configuración del servidor
NODE_ENV=production
PORT=3000

# Configuración de la base de datos (LOCAL en servidor para máxima seguridad)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=botzilla_prod
DB_USER=botzilla_user
DB_PASSWORD=TU_PASSWORD_SEGURO_AQUI
DB_SCHEMA=botzilla
DB_SSL=false

# Configuración JWT
JWT_SECRET=TU_JWT_SECRET_MUY_SEGURO_AQUI_MINIMO_32_CARACTERES
JWT_EXPIRES_IN=24h

# Configuración de logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Configuración de seguridad
AUTOMATION_API_KEY=TU_API_KEY_SEGURO_AQUI
TELEGRAM_BOT_ACCESS_KEY=TU_TELEGRAM_KEY_AQUI

# Configuración del frontend (cambiar por tu dominio real)
FRONTEND_URL=https://tudominio.com

# Credenciales de Attic Tech (si las usas)
ATTIC_TECH_EMAIL=tu_email@domain.com
ATTIC_TECH_PASSWORD=tu_password_attic_tech

# Configuración OpenAI (si la usas)
OPENAI_API_KEY=tu_openai_key_aqui
OPENAI_MODEL=gpt-4o-mini

# Configuración de estimaciones
OP_POST_MIN_SAVED=0.15

# ========================================
# INSTRUCCIONES:
# 1. Copia este archivo como .env en el servidor
# 2. Cambia todas las contraseñas y claves secretas
# 3. Actualiza FRONTEND_URL con tu dominio real
# 4. Configura las credenciales de servicios externos si los usas
# ========================================
